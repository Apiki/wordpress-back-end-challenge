{
  // Editor Roles
  "editor.rulers": [120],

  // Ignore Directory
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true,
    "**/.hg/store/**": true,
    "**/vendor/*/**": true,
  },
  "files.exclude": {
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },

  // PHP Standard
  "phpSniffer.standard": "./phpcs.xml",
  "phpSniffer.autoDetect": true,
  "[php]": {
    "editor.defaultFormatter": "wongjn.php-sniffer",
    "editor.formatOnSave": true
  },
  "cSpell.ignoreWords": [
    "Gruntfile",
    "Macal√≠",
    "bloginfo",
    "dismissable",
    "macali",
    "tgmpa",
    "trailingslashit",
    "wordpress"
  ],
}
